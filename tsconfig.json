{
  "compilerOptions": {
    "outDir": "build",
    "forceConsistentCasingInFileNames": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "target": "es5",
    "module": "esnext",
    "lib": [
        "dom",
        "es5",
        "es2015.promise"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "../",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveSymlinks": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "paths": {
      "helpers/*": [
        "src/utils/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "interfaces/*": [
        "src/interfaces/*"
      ]
    },
  },
  "exclude": ["node_modules", "build", "scripts", "webpack"],
  "typeRoots": ["node_modules/@types"]
}
