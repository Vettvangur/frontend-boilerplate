  },
  "scripts": {
    "start": "yarn dev",
    "build": "yarn webpack && yarn gulp:sprites",
    "build:deploy": "yarn build && yarn deploy",
    "dev": "webpack-dev-server --config ./webpack --inline --progress --hot",
    "clean": "rm -rf node_modules && npm i",
    "clean:cache": "rm -rf [package-lock.json] node_modules && npm cache clean -f && npm i",
    "gulp:sprites": "gulp sprites --gulpfile ./config/gulpfile.js",
    "deploy": "cp -r ./build/* ../Umbraco.Site/content/hlaup",
    "deploy:fonts": "cp -r ./assets/fonts ../Umbraco.Site/content/hlaup",
    "deploy:sprites": "gulp deploy-sprites --gulpfile ./config/gulpfile.js",
    "webpack": "webpack --config ./webpack --env.production --display-error-details"
  }
